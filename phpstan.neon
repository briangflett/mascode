parameters:
    level: 5
    paths:
        - Civi/
        - CRM/
    excludePaths:
        - */tests/*
        - */vendor/*
        - mascode.civix.php
    
    # CiviCRM specific configurations
    bootstrapFiles:
        - mascode.php
    
    # Ignore some CiviCRM-specific patterns
    ignoreErrors:
        - '#Call to an undefined method Civi\\.*#'
        - '#Access to an undefined property CRM_.*#'
        - '#Class CRM_.* not found#'
        - '#Function civicrm_.* not found#'
        
    # Include doctrine annotations for better analysis
    doctrine:
        objectManagerLoader: tests/doctrine-object-manager.php
        
    # Memory limit for analysis
    memoryLimitFile: .phpstan-memory-limit
    
    # Check for dead code (optional, can be enabled later)
    checkGenericClassInNonGenericObjectType: false
    checkMissingIterableValueType: false
    
    # Additional rules for better code quality
    reportUnmatchedIgnoredErrors: false