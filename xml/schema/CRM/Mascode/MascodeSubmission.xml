<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Mascode</base>
  <class>MascodeSubmission</class>
  <name>civicrm_mascode_submission</name>
  <comment>Mascode form submissions with associated contacts and statuses</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique MascodeSubmission ID</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>organization_contact_id</name>
    <type>int unsigned</type>
    <comment>FK to Organization Contact</comment>
  </field>
  <foreignKey>
    <name>organization_contact_id</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>contact_id_2</name>
    <type>int unsigned</type>
    <comment>FK to Contact 2</comment>
  </field>
  <foreignKey>
    <name>contact_id_2</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>contact_id_3</name>
    <type>int unsigned</type>
    <comment>FK to Contact 3</comment>
  </field>
  <foreignKey>
    <name>contact_id_3</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>submission_date</name>
    <type>datetime</type>
    <default>CURRENT_TIMESTAMP</default>
    <comment>Autogenerated when the row was added</comment>
  </field>

  <field>
    <name>form_id</name>
    <type>varchar(255)</type>
    <comment>ID of the form that was submitted</comment>
  </field>

  <field>
    <name>field_data</name>
    <type>text</type>
    <comment>JSON array of field name-value pairs</comment>
  </field>

  <field>
    <name>status</name>
    <type>enum('Pending', 'Approved', 'Spam', 'Rejected')</type>
    <default>Pending</default>
    <comment>Current status of the form submission</comment>
  </field>
</table>
